# Distroless is not enough here so use the UBI for the runtime
ARG RUNTIME_IMAGE=registry.access.redhat.com/ubi8-minimal:latest

# Create the runtime image
FROM ${RUNTIME_IMAGE}

RUN mkdir /opt/precache

COPY pre-cache/release \
     pre-cache/common \
     pre-cache/olm \
     pre-cache/parse_index.py \
     pre-cache/pull \
     pre-cache/precache.sh \
     pre-cache/check_space \
     /opt/precache/
